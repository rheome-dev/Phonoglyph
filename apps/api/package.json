{
  "name": "@phonoglyph/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist",
    "db:migrate": "tsx -r dotenv/config src/db/migrations/migrate.ts",
    "db:seed": "tsx src/db/seeds/development.ts",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "r2:test": "tsx src/scripts/test-s3.ts",
    "queue:worker": "tsx -r dotenv/config src/scripts/start-queue-worker.ts",
    "test:stems": "tsx scripts/test-stem-separation.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "phonoglyph-types": "workspace:*",
    "@supabase/supabase-js": "^2.50.2",
    "@trpc/server": "10.45.2",
    "@types/fluent-ffmpeg": "^2.1.27",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "file-type": "^18.7.0",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^7.1.0",
    "image-size": "^1.0.2",
    "midi-parser-js": "^4.0.4",
    "pg": "^8.11.3",
    "sharp": "^0.32.6",
    "wav": "^1.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/wav": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "msw": "2.2.1",
    "supertest": "^6.3.4",
    "tsx": "^4.7.0",
    "typescript": "5.3.3",
    "vitest": "^3.2.4"
  }
}
